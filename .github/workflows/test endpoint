name: CI/CD Workflow

on:
  push:
    branches:
      
main

jobs:
  build-test:
    runs-on: ubuntu-latest

    steps:
      
name: Checkout code
      uses: actions/checkout@v2

      
name: Set up Go
      uses: actions/setup-go@v2
      with:
        go-version: 1.20

      
name: Test application
      run: go test ./...

      
name: Build application
      run: go build -o endpoint -o build/endpoint main.go

  build-docker:
    needs: build-test
    runs-on: ubuntu-latest

    steps:
      
name: Checkout code
      uses: actions/checkout@v2

      
name: Set up Docker
      uses: docker/setup-buildx-action@v1

      
name: Build Docker image
      run: docker build -t endpoint:1.0.0 .

      
name: Log in to GitHub Packages
      uses: docker/login-action@v1
      with:
        registry: docker.pkg.github.com
        username: ${{ github.actor }}
        password: ${{ secrets.GITHUB_TOKEN }}

      
name: Push Docker image to GitHub Packages
      run: docker push docker.pkg.github.com/${{ github.repository }}/endpoint:1.0.0

      
name: Run application with Docker
      run: docker run -d -p 8080:8080 --name endpoint docker.pkg.github.com/${{ github.repository }}/endpoint:1.0.0

  run-application:
    needs: build-test
    runs-on: ubuntu-latest

    steps:
      
name: Checkout code
      uses: actions/checkout@v2

      
name: Set up Go
      uses: actions/setup-go@v2
      with:
        go-version: 1.20

      
name: Run application
      run: go run main.go

  run-binary:
    needs: build-test
    runs-on: ubuntu-latest

    steps:
      
name: Checkout code
      uses: actions/checkout@v2

      
name: Run binary
      run: |
        cd build./endpoint
